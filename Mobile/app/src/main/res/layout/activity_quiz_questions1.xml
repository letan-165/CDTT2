<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UI.Activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toStartOf="@id/notification_icon"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_rounded_search"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="12dp"
                    android:hint="Nhập mã bài Quizz ..."
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notification"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Notification Icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_card"
                android:backgroundTint="#E0E0E0"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào Fushiree"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thật vui vì được gặp lại bạn"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_welcome_graphic"
                    android:contentDescription="Welcome Graphic" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_main_content_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:id="@+id/question_numbers_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Câu hỏi:"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_selected"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="2"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_default"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="3"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_default"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="4"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_default"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/done_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Làm xong"
                            android:textColor="#0000FF"
                            android:textSize="12sp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu 1. Kết quả của đoạn mã sau là gì?"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>



                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/radio_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A. 15"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"/>
                    <RadioButton
                        android:id="@+id/radio_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B. 510"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"/>
                    <RadioButton
                        android:id="@+id/radio_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C. Lỗi biên dịch"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"/>
                    <RadioButton
                        android:id="@+id/radio_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="D. Không in ra gì"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </RadioGroup>

                <Button
                    android:id="@+id/btn_next_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu tiếp"
                    android:background="@drawable/bg_rounded_button_black"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:layout_gravity="end"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:minHeight="48dp"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp" >

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_chat"
            android:contentDescription="Chat"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="4dp" />
    </LinearLayout>

</RelativeLayout>