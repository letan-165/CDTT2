<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UI.Activity.QuizQuestions2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar and Notification Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toStartOf="@id/notification_icon"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_rounded_search"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="12dp"
                    android:hint="@string/hint_search_quiz_code"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notification"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/content_description_notification_icon" />
            </RelativeLayout>

            <!-- Welcome Card -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_card"
                android:backgroundTint="#E0E0E0"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_title"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_message"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_welcome_graphic"
                    android:contentDescription="@string/content_description_welcome_graphic" />
            </RelativeLayout>

            <!-- Question & Timer Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_main_content_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:id="@+id/question_numbers_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_question"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <!-- Question Numbers -->
                        <TextView
                            android:id="@+id/question_number_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_default"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/question_number_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_bottom_nav"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/question_number_3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="3"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_default"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/question_number_4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="4"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@drawable/bg_rounded_question_number_default"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/quiz_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_timer_placeholder"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/done_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_done_quiz"
                            android:textColor="#0000FF"
                            android:textSize="12sp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_text_2"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Radio Group for Answer Options -->
                <RadioGroup
                    android:id="@+id/answer_options_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_a_2"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:button="@drawable/custom_radio_button"
                        android:paddingStart="12dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <RadioButton
                        android:id="@+id/radio_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_b_2"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:button="@drawable/custom_radio_button"
                        android:paddingStart="12dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <RadioButton
                        android:id="@+id/radio_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_c_2"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:button="@drawable/custom_radio_button"
                        android:paddingStart="12dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <RadioButton
                        android:id="@+id/radio_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_d_2"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingVertical="8dp"
                        android:button="@drawable/custom_radio_button"
                        android:paddingStart="12dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </RadioGroup>

                <!-- Navigation Buttons (bottom of content card) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">

                    <Button
                        android:id="@+id/btn_previous_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_previous_question"
                        android:background="@drawable/bg_rounded_button_black"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:minHeight="48dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <Button
                        android:id="@+id/btn_next_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_next_question"
                        android:background="@drawable/bg_rounded_button_black"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:minHeight="48dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_rounded_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp" >

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/content_description_home_icon"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/content_description_settings_icon"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_chat"
            android:contentDescription="@string/content_description_chat_icon"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/content_description_profile_icon"
            android:padding="4dp" />
    </LinearLayout>

</RelativeLayout>