<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toStartOf="@id/notification_icon"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_rounded_search"
                    android:drawableStart="@drawable/ic_search_chat"
                    android:drawablePadding="12dp"
                    android:hint="Tìm kiếm..."
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notification"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Notification Icon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tab_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/underline_black"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tab_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa đọc"
                    android:textColor="#888888"
                    android:textSize="16sp"
                    android:paddingBottom="4dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"
                android:layout_marginBottom="16dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_chat_item"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar_le_tan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar_le_tan"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Avatar Lê Tấn"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatar_le_tan"
                    android:layout_toStartOf="@id/time_le_tan"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lê Tấn"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_le_tan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/14/2025"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/unread_count_le_tan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_unread_count"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/time_le_tan"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_chat_item"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar_ngo_thinh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar_ngo_thinh"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Avatar Ngô Thịnh"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatar_ngo_thinh"
                    android:layout_toStartOf="@id/time_ngo_thinh"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngô Thịnh"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_ngo_thinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/14/2025"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/unread_count_ngo_thinh"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_unread_count"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/time_ngo_thinh"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_chat_item"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar_quoc_dung"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar_quoc_dung"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Avatar Quốc Dũng"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatar_quoc_dung"
                    android:layout_toStartOf="@id/time_quoc_dung"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quốc Dũng"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_quoc_dung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/14/2025"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/unread_count_quoc_dung"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_unread_count"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/time_quoc_dung"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_chat_item"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar_hoang_phu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar_hoang_phu"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Avatar Hoàng Phú"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatar_hoang_phu"
                    android:layout_toStartOf="@id/time_hoang_phu"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoàng Phú"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_hoang_phu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/14/2025"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/unread_count_hoang_phu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_unread_count"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/time_hoang_phu"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_rounded_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp" >

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_chat"
            android:contentDescription="Chat"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="4dp" />
    </LinearLayout>

</RelativeLayout>