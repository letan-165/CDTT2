<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#24A507"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/icon_hat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_Mask_group"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Quizz"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_rounded_bottom_nav">

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Info@edu.vn"
                android:textColorHint="#CCCCCC"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_send_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_rounded_button_black"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Gửi mã xác nhận"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_gravity="center_horizontal"
        android:stateListAnimator="@null"/>

</LinearLayout>